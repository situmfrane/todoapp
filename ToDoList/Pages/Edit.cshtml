@page
@model ToDoList.Pages.Edit


<div class="w-2/3 items-center grid-cols-1 mt-20 mx-auto">
    <form method="post">
        <input type="hidden" asp-for="ToDo.Id">
        <h1>Edit a task</h1>
        <div class="bg-gray-200 border border-1 p-4 rounded-md shadow-lg">
            <div class="my-2">
                <label>Task name</label><br/>
                <input asp-for="ToDo.TaskName" class="p-1 rounded-md border border-1"/> <br/>
            </div>
            <div class="my-2">
                <label>Assignee</label> <br/>
                <input asp-for="ToDo.Assignee" class="p-1 rounded-md border border-1"/> <br/>
            </div>
            <div class="my-2">
                <label>Is done</label>
                <select asp-for="ToDo.IsDone" class="p-1 rounded-md border border-1 bg-white">
                    <option>---</option>
                    <option value="false" >No</option>
                    <option value="true" >Yes</option>
                </select>
            </div>
            <input type="submit" value="Update" class="h-12 border border-1 bg-blue-400 text-white font-bold cursor-pointer px-2 rounded-xl hover:bg-blue-500" />             
        </div>
    </form>
</div>
