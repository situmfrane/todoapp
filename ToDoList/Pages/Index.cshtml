@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="overflow-x-auto">
        <div class="min-w-screen min-h-screen flex mt-20 justify-center font-sans overflow-hidden">
            <div class="w-full lg:w-5/6">
                <div class="flex justify-content-between">
                    <h1>To do list</h1>
                    <a asp-page="Create" class="my-auto p-2 border border-1 bg-blue-400 text-white font-bold cursor-pointer px-2 rounded-xl hover:bg-blue-500">Add new task</a>
                </div>
                <div class="bg-white shadow-md rounded my-6">
                    @if(Model.ToDo.Count() > 0) {
                    <table class="min-w-max w-full table-auto">
                    <thead>
                    <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                        <th class="py-3 px-6 text-left">Num.</th>
                        <th class="py-3 px-6 text-left">Task</th>
                        <th class="py-3 px-6 text-center">Assignee</th>
                        <th class="py-3 px-6 text-center">Is done</th>
                        <th class="py-3 px-6 text-center"></th>
                        <th class="py-3 px-6 text-center"></th>
                    </tr>
                    </thead>
                    <tbody class="text-gray-600 text-sm font-light">
                    @{ int i = 1;}
                    @foreach(var task in Model.ToDo) {
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left whitespace-nowrap">
                                <div class="flex items-center">
                                    <span class="font-medium">
                                        @i
                                    </span>
                                </div>
                            </td>
                            <td class="py-3 px-6 text-left">
                                <div class="flex items-center">
                                    <span>
                                        @Html.DisplayFor(m => task.TaskName)
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div >
                                    <span>
                                        @Html.DisplayFor(m => task.Assignee)
                                    </span>
                                </div>
                            </td>
                            @if (task.IsDone == true)
                            {
                            <td class="py-3 px-6 text-center">
                                <span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs">Yes</span>
                            </td>
                            }
                            else
                            {
                                <td class="py-3 px-6 text-center">
                                    <span class="bg-red-200 text-red-600 py-1 px-3 rounded-full text-xs">No</span>
                                    </td>
                            }
                            <td class="py-3 px-6 text-center">
                                <div class="w-4 mr-2 transform hover:text-blue-500 hover:scale-110">
                                    <a asp-page="Edit" asp-route-id="@task.Id">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                            <td class="py-3 px-6 text-center">
                                
                                    <div class="w-4 mr-2 transform hover:text-red-500 hover:scale-110">
                                <form method="post">
                                <button type="submit" asp-route-id="@task.Id" class="text-red-400 underline">Delete</button>
                                </form>
                                    </div>
                            </td>
                            @{ i++;}
                        </tr>
                        }
                    </table>
                    } 
                     else 
                     { 
                        <p class="px-2 py-4 bg-gray-200 font-bold">No tasks found</p>
                     } 
                    </div>
            </div>
        </div>
</div>
                
                        </div>